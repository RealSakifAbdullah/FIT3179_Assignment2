{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/RealSakifAbdullah/FIT3179_Assignment2/main/data/missing_migrants.csv"
    },
    "params": [
        {
            "name": "Population_Above",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 2014,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Active > 0"
        },
        {
            "filter": "datum.Deaths > 0"
        },
        {
            "filter": "datum.Incident > Population_Above"
        },
        {
            "calculate": "datum.Confirmed/datum.Population * 10000",
            "as": "Cases per 10,000 Population"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Cause of Death"
        },
        "y": {
            "aggregate": "count",
            "title": "Number of incidents"
        }
    }
}