{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 350,
    "data": {
        "url": "https://raw.githubusercontent.com/RealSakifAbdullah/FIT3179_Assignment2/main/data/missing_migrants.csv"
    },
    "params": [
        {
            "name": "Selected_Year",
            "value": 2014,
            "bind": {
                "input": "range",
                "min": 2014,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "showAllYears",
            "value": false,
            "bind": {
                "input": "checkbox",
                "name": "Show all years"
            }
        }
    ],
    "transform": [
        {
            "filter": " showAllYears ||datum.Year == Selected_Year"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "aggregate": "count",
            "title": "Number of incidents"
        },
        "y": {
            "field": "Cause of Death",
            "title": "Type of Incident"
        },
        "tooltip": [
            {
                "field": "Cause of Death",
                "type": "nominal",
                "title": "Incident Type: "
            },
            {
                "aggregate": "count",
                "type": "quantitative",
                "title": "Number of Incidents: "
            }
        ]
    }
}