{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/RealSakifAbdullah/FIT3179_Assignment2/main/data/missing_migrants.csv"
    },
    "params": [
        {
            "name": "Selected_Year",
            "value": 2014,
            "bind": {
                "input": "range",
                "min": 2014,
                "max": 2023,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == Selected_Year"
        },
        {
            "aggregate": [
                {
                    "op": "count",
                    "as": "total"
                }
            ],
            "groupby": [
                "Region of Origin",
                "Region of Incident"
            ]
        }
    ],
    "encoding": {
        "y": {
            "field": "Region of Origin",
            "type": "ordinal"
        },
        "x": {
            "field": "Region of Incident",
            "type": "ordinal"
        }
    },
    "layer": [
        {
            "mark": "rect",
            "encoding": {
                "color": {
                    "field": "total",
                    "type": "quantitative",
                    "title": "Count of Records",
                    "legend": {
                        "direction": "horizontal",
                        "gradientLength": 120
                    }
                }
            }
        },
        {
            "mark": "text",
            "encoding": {
                "text": {
                    "field": "total",
                    "type": "quantitative"
                },
                "color": {
                    "condition": {
                        "test": "datum['total'] < 40",
                        "value": "black"
                    },
                    "value": "white"
                }
            }
        }
    ],
    "config": {
        "axis": {
            "grid": true,
            "tickBand": "extent"
        }
    }
}